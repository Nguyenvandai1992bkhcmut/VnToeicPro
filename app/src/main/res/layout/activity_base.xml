<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <tranthicamgiang.com.foldingeffect.FoldingViewGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/foldingViewgroup"
        android:orientation="horizontal">
        <tranthicamgiang.com.foldingeffect.FoldingLayout
            android:layout_width="320dp"

            android:layout_height="match_parent"
            android:id="@+id/folding_layout">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/left_frame"></FrameLayout>
        </tranthicamgiang.com.foldingeffect.FoldingLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/right_frame"
            android:layout_height="match_parent"></FrameLayout>
    </tranthicamgiang.com.foldingeffect.FoldingViewGroup>

</RelativeLayout>