<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2">
    <RelativeLayout
        android:layout_width="match_parent"
         android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/text_cancel"
            android:textColor="@color/com_facebook_messenger_blue"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="Cancel" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/com_facebook_messenger_blue"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/text_submit"
            android:text="Submit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_toLeftOf="@id/text_submit"
            android:textColor="@color/com_facebook_messenger_blue"
            android:layout_marginRight="20dp"
            android:text="Preview"
            android:id="@+id/text_preview"/>
        </RelativeLayout>
    <ImageView android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@drawable/line_gray"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="100dp"
        android:background="@null"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@android:color/holo_green_dark"
        android:textColorHint="@android:color/holo_green_dark"
        android:paddingBottom="10dp"
        android:hint="Question Title"
        android:id="@+id/edit_question_title"/>
    <ImageView android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@drawable/line_gray"
        android:id="@+id/img_line_title"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:maxHeight="100dp"
        android:background="@null"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:paddingBottom="10dp"
        android:hint="Body question goes there..."
        android:id="@+id/edit_question_body"/>
    <ImageView android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@drawable/line_gray"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:id="@+id/line_select_tag">
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/select_tag"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/com_facebook_messenger_blue"
            android:text="Select at least 1 tag,max 5 tags"/>
        </LinearLayout>
    <supportview.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/flow_tag"/>
</LinearLayout>