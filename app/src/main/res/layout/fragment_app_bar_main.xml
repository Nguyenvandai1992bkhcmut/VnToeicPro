<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/app_bar_main">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/relative_top"
             android:background="@color/header"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VnToeic"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="@color/text_icon"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/img_icon" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@mipmap/icon_search"
                android:layout_gravity="center_vertical|start"
                android:id="@+id/img_search"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/icon_setting"
            android:layout_gravity="center_vertical|start"
            android:id="@+id/img_menu"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:padding="5dp"
                android:layout_toRightOf="@id/img_menu"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:focusableInTouchMode="true"
                android:privateImeOptions="nm"
                android:inputType="textNoSuggestions"
                android:minLines="1"
                android:maxLines="1"
                android:layout_toLeftOf="@id/img_search"
                android:layout_centerVertical="true"
                android:background="@drawable/rect_search"
                android:visibility="gone"
                android:id="@+id/edit_search"
                android:hint="Enter Key"/>


        </RelativeLayout>


    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_app"
        android:layout_below="@id/relative_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical">

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_card"
            android:padding="5dp"
            android:weightSum="1"
            android:id="@+id/relate_feed">

            <ImageView android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/essentialwordsicon"
                />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Feeds"/>

        </RelativeLayout>


        <RelativeLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rect_card"
                android:padding="5dp"
                android:weightSum="1"
                android:id="@+id/relate_dictionary">

                <ImageView android:layout_width="50dp"
                        android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                        android:background="@mipmap/essentialwordsicon"
                        />
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="Dictionary"/>

            </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_card"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:weightSum="1">

            <ImageView android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/mywordsicon"
                />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Vocabulary"/>

        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_card"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:weightSum="1"
            android:id="@+id/relate_part1">

            <ImageView android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/part1icon"
                />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Part1"/>

        </RelativeLayout>


        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_card"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:weightSum="1"
            android:id="@+id/relate_part2">

            <ImageView android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/part2icon"
                />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Part2"/>

        </RelativeLayout>


        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_card"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/relate_part3"
            android:weightSum="1">

            <ImageView android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/part3icon"
                />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Part3"/>

        </RelativeLayout>


        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_card"
            android:padding="5dp"
            android:id="@+id/relate_part4"

            android:layout_marginTop="10dp"
            android:weightSum="1"
            >

            <ImageView android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/part4icon"
                />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Part4"/>

        </RelativeLayout>


        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_card"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:weightSum="1"
            android:id="@+id/relate_part5">

            <ImageView android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/part5icon"
                />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Part5"/>

        </RelativeLayout>


        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_card"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:weightSum="1"
            android:id="@+id/relate_part6">

            <ImageView android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/part6icon"
                />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Part6"/>

        </RelativeLayout>


        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_card"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:weightSum="1"
            android:id="@+id/relate_part7">

            <ImageView android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/part7icon"
                />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Part7"/>

        </RelativeLayout>


        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_card"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:weightSum="1"
            android:id="@+id/relate_readingtest">

            <ImageView android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/part7icon"
                />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Test Reading"/>

        </RelativeLayout>



    </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/holo_red_dark"
        android:text="aaaa"
        android:textSize="1sp"
        android:id="@+id/text_bottom"/>

</RelativeLayout>
