<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/explanation_layout"
            android:orientation="horizontal">
            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/btn_explanation"
                android:background="@mipmap/icon_play"/>
            <TextView
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Explanation"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/explanation_textView"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/unawareWords_layout"
            android:orientation="horizontal">
            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/btn_unawareWords"
                android:background="@mipmap/icon_play"/>
            <TextView
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unaware Words"
                />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_unawareWords">

        </android.support.v7.widget.RecyclerView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/awareWords_layout"
            android:orientation="horizontal">
            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/btn_awareWords"
                android:background="@mipmap/icon_play"/>
            <TextView
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aware Words"
                />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_awareWords">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</ScrollView>