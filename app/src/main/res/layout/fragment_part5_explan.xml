<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:background="@drawable/rect_part">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/line_explan"
        android:padding="10dp">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/img_explan">
            <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_explan"/>
            <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explan"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_icon"/>
        </LinearLayout>
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:id="@+id/text_explan"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/line_aware">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:id="@+id/img_aware">
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_explan"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aware Word"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_icon"
                android:id="@+id/textView" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:visibility="gone"
            android:id="@+id/recycle_aware_word">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>
</ScrollView>