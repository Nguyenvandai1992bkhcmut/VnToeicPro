<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/favorate_layout"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:padding="10dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/btn_red"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/circle_red"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_orrange"
            android:layout_gravity="center"
            android:src="@mipmap/circle_orrange"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/btn_yellow"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/circle_yellow"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/btn_green"
            android:src="@mipmap/circle_green"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/btn_blue"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/circle_blue"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/btn_purple"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/circle_purple"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/btn_un_favorite"
            android:src="@mipmap/un_favorite"
            />

    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="match_parent">
        <Button
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/btn_favorite"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/word"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerView">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>